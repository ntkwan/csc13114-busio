FROM node:22-alpine

ARG NODE_ENV
ARG NODE_OPTIONS
ARG PORT
ARG DEBUG_PORT
ARG DB_HOST
ARG DB_PORT
ARG DB_USERNAME
ARG DB_PASSWORD
ARG DB_NAME
ARG REDIS_HOST
ARG REDIS_PORT
ARG REDIS_USERNAME
ARG REDIS_PASSWORD
ARG REDIS_DB
ARG REDIS_TLS
ARG JWT_SECRET
ARG JWT_EXPIRES_IN
ARG JWT_REFRESH_SECRET
ARG JWT_REFRESH_EXPIRES_IN
ARG FIREBASE_SERVICE_ACCOUNT_PATH
ARG FIREBASE_API_KEY
ARG FIREBASE_TOKEN_VALIDATION_URL
ARG USER_SERVICE_URL
ARG ZALO_APP_ID
ARG ZALO_APP_SECRET

ENV NODE_ENV=${NODE_ENV}
ENV NODE_OPTIONS=${NODE_OPTIONS}
ENV PORT=${PORT}
ENV DEBUG_PORT=${DEBUG_PORT}
ENV DB_HOST=${DB_HOST}
ENV DB_PORT=${DB_PORT}
ENV DB_USERNAME=${DB_USERNAME}
ENV DB_PASSWORD=${DB_PASSWORD}
ENV DB_NAME=${DB_NAME}
ENV REDIS_HOST=${REDIS_HOST}
ENV REDIS_PORT=${REDIS_PORT}
ENV REDIS_USERNAME=${REDIS_USERNAME}
ENV REDIS_PASSWORD=${REDIS_PASSWORD}
ENV REDIS_DB=${REDIS_DB}
ENV REDIS_TLS=${REDIS_TLS}
ENV JWT_SECRET=${JWT_SECRET}
ENV JWT_EXPIRES_IN=${JWT_EXPIRES_IN}
ENV JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
ENV JWT_REFRESH_EXPIRES_IN=${JWT_REFRESH_EXPIRES_IN}
ENV FIREBASE_SERVICE_ACCOUNT_PATH=${FIREBASE_SERVICE_ACCOUNT_PATH}
ENV FIREBASE_API_KEY=${FIREBASE_API_KEY}
ENV FIREBASE_TOKEN_VALIDATION_URL=${FIREBASE_TOKEN_VALIDATION_URL}
ENV USER_SERVICE_URL=${USER_SERVICE_URL}
ENV ZALO_APP_ID=${ZALO_APP_ID}
ENV ZALO_APP_SECRET=${ZALO_APP_SECRET}

WORKDIR /app

RUN apk add --no-cache wget

COPY package*.json ./

RUN npm install

COPY . .

COPY bkb-service-account-key.json .

RUN mkdir -p logs

EXPOSE ${PORT} ${DEBUG_PORT}

# CMD ["npm", "run", "start:dev"]

RUN npm run build

CMD ["node", "dist/src/main.js"]
