FROM node:22-alpine

ARG NODE_ENV
ARG NODE_OPTIONS
ARG PORT
ARG DEBUG_PORT
ARG DB_HOST
ARG DB_PORT
ARG DB_USERNAME
ARG DB_PASSWORD
ARG DB_NAME

ENV NODE_ENV=${NODE_ENV}
ENV NODE_OPTIONS=${NODE_OPTIONS}
ENV PORT=${PORT}
ENV DEBUG_PORT=${DEBUG_PORT}
ENV DB_HOST=${DB_HOST}
ENV DB_PORT=${DB_PORT}
ENV DB_USERNAME=${DB_USERNAME}
ENV DB_PASSWORD=${DB_PASSWORD}
ENV DB_NAME=${DB_NAME}

WORKDIR /app

RUN apk add --no-cache wget

COPY package*.json ./

RUN npm install

COPY . .

RUN mkdir -p logs

EXPOSE ${PORT} ${DEBUG_PORT}

RUN npm run build

CMD ["node", "dist/src/main.js"]